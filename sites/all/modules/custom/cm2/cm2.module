/**
 * theme menu_link
 */
function theme_cm2_link($vars) {
  if (strstr($vars['path'],"redirect/mobile")) {
  	$vars['text'] = t('Mobile Version');
  }
  if (strstr($vars['path'],"redirect/desktop")) {
  	$vars['text'] = t('Full Version');
  }
  return theme_link($vars);
}
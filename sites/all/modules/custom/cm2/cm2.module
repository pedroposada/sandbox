/**
 * Implements MYMODULE_preprocess()
 */
function cm2_preprocess_link(&$vars) {
  if (strstr($vars['path'],"redirect/mobile")) {
    $vars['theme_hook_suggestions'][] = 'cm2_link';
  }
  if (strstr($vars['path'],"redirect/desktop")) {
    $vars['theme_hook_suggestions'][] = 'cm2_link';
  }
}

